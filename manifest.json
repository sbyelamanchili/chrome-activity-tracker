{
  "manifest_version": 3,
  "name": "Activity Time Tracker & Productivity Analytics",
  "short_name": "Activity Tracker",
  "version": "1.0.0",
  "description": "Track and visualize your browsing habits with beautiful analytics. Monitor time spent on social media, work, entertainment & more. Boost productivity with insights.",
  "author": "Your Name",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Activity Time Tracker"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "homepage_url": "https://github.com/yourusername/activity-tracker",
  "offline_enabled": true
}
